@model Master.Contract.Customer
@{
    ViewBag.Title = "Login";
}
<section class="help">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <h2><i class="fa fa-sign-in"></i> Login Now</h2>
                            <div class="qc-form">
                                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "frmLogin", name = "frmLogin" }))
                                    {
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        <div class="form-group">                                            
                                            @Html.TextBoxFor(x => x.MobileNo, new { placeholder = "Phone", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        <div class="form-group">
                                            @Html.PasswordFor(x => x.Password, new { placeholder = "Password", @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-default btn-submit btn-md ripple has-ripple" type="submit">Submit</button>
                                    <p class="login pull-right"><a href="@Url.Content("~/Account/Register")"><i class="fa fa-plus-circle"></i> New User Register Here</a></p>
                                </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script type="text/javascript">
        $(function () {
            sessionStorage.setItem('isUserLoggedIn', "False");
            $('#frmLogin').validate({
                rules: {
                    MobileNo: {
                        required: true
                    },
                    Password: {
                        required: true
                    }
                },
                errorPlacement: function (error, element) { }
            });
        });

        function btnLogin() {
            if ($('#frmLogin').valid())
                $('#frmLogin').submit();
            else {
                $('label.error').remove();
            }
        }
    </script>
}
