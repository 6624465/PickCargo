    <div class="row" style="padding-top:0px;">
        <div class="col-md-12 col-xs-12 text-center">
            <h3>Your Bill</h3>
        </div>
    </div>
    <div class="row" style="padding-top:0px;">
        <div class="col-md-12 col-xs-12 text-center">
            <h3><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;187</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12 text-center">
            <blockquote>
                <span><i class="fa fa-calendar fa-2x" aria-hidden="true"></i>&nbsp;@DateTime.Now.ToLongDateString()</span>
                <div><span class="text-green">AMEERPET</span>&nbsp;/&nbsp;<span class="text-red">MIYAPUR</span></div>
                <small><cite title="Source Title">MY CARGO DESC 2</cite></small>
                <small><cite title="Source Title">TRIP REMARKS 2 UPDATE</cite></small>
            </blockquote>
        </div>
    </div>    

    <footer class="main-footer">
        <div class="row" style="padding-top:0px;">
            <div class="col-md-12 col-xs-12 text-center">
                <h4>How was your ride ?</h4>
            </div>
        </div>
        <div class="row" style="padding-top:0px;">
            <div class="col-md-12 col-xs-12 text-center">
                <h3><input id="ratingCntrl" type="hidden" class="rating" /></h3>
            </div>
        </div>
    </footer>    
    <script src="@Url.Content("~/js/jquery-2.1.3.min.js")"></script>
    <script src="@Url.Content("~/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/js/bootstrap-rating.min.js")"></script>
    <!--ref link for rating https://github.com/dreyescat/bootstrap-rating -->
    <script type="text/javascript">
        $(function () {
            $('#ratingCntrl').rating({
                filled: 'fa fa-star',
                empty: 'fa fa-star-o'
            });            
        });

        $('#ratingCntrl').on('change', function () {
            var rate = $(this).val();
            if (rate <= 3) {
                location.href = '@Url.Content("~/Bill/mobilefeedback")'
            }
        });
    </script>
</body>
</html>
