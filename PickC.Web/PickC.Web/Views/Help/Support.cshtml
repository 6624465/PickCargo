                                        <div class="contact-info-box-content support">

                                           <p><i class="fa fa-phone"></i>&nbsp; +91. 40. 6 5454 222 </p>
                                            <p>
                                                <i class="fa fa-globe" aria-hidden="true"></i>
                                                &nbsp; www.pickcargo.in
                                            </p>
                                        </div>
                                    </div>*@
                                </div>

                            </div>

                        </div>

                    </div>
                    <!-- Widget end -->

                </div>
                <!-- Sidebar end -->
            </div>
            <!-- Sidebar Col end -->
            <!-- Content col end -->

        </div>


        <!-- Content row -->
    </div>
    <!-- Conatiner end -->
</section>

