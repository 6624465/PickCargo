@model Master.Contract.DriverTripInvoice
@{
    ViewBag.Title = "DriverInvoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container content">
    <div style="border:1px thin #e7e7e7; border-style: double;">
        <br />
        <h2 class="title"> <span class="title-head" style="font-size:30px;"> Driver Invoice</span> </h2>
        <br />
        <div class="row">
            <div class="col-md-1 col-md-offset-1">
                <div class="driverpic text-center">
                    @*<img src="~/images/driver.jpg" style="width:100%;max-width:65px;height:auto;" />*@
                </div>
            </div>
            <div class="col-md-4">
                <p><b>Driver Name : </b>@Model.DriverName</p>
                <p><b>Driver ID : </b> @Model.DriverID</p>
                <br />

                <p><b>Invoice Number : </b> @Model.InvoiceNo</p>
                <p><b>Invoice ID : </b> @Model.InvoiceNo</p>
                <p><b>Invoice Date : </b> @Model.InvoiceDate </p>
            </div>
            <div class="col-md-2 text-right">
                <div class="vhl_pic">
                    @*<img src="~/images/DOST_shadow.jpg" style="width: 100%; height: auto; max-width: 110px;" />*@
                </div>
            </div>
            <div class="col-md-3">
                <p><b>Vehicle Type :</b> @Model.VehicleType</p>
                <p><b>Vehicle ID :</b> @Model.VehicleNo</p>
                <p><b>Vehicle Category :</b> @Model.VehicleGroup</p>

                <br />
                <p><b>Tax Category :</b> GST Tax</p>
            </div>
        </div>
        <hr style="margin:5px 0px; background-color:rgb(85,85,85);" />
        <div class="row">
            <div class="col-md-4 col-md-offset-2"><h5><b>CRN Number : 12464874549874</b></h5></div>
            <div class="col-md-4  col-md-offset-2"><h5><b>GST Number :</b> 46847861</h5></div>
        </div>
        <hr style="margin:5px 0px; background-color:rgb(85,85,85);" />
        <h2 class="title"> <span class="title-head" style="font-size:20px;">  Trip Details</span> </h2>
        <br />
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <p><b>Customer Name:</b>@Model.CustomerName</p>
                <p><b>Customer Mobile No. :</b>@Model.CustomerMobileNo</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 col-md-offset-1">
                <h4><b>From Location :</b></h4>
                @*<p>
                        #26, Overlook Road Ardsley,
                        NY-10502, USA
                    </p><p>
                        Phone : +1. 646. 696 6005
                    </p><p>
                        Email : info@pickcargo.in
                    </p>*@
                <p>
                    @Model.FromLocation
                </p>
                <br />

            </div>
            <div class="col-md-3 col-md-offset-2">
                <h4><b>To Location :</b></h4>
                @*<p>
                        #26, Overlook Road Ardsley,
                        NY-10502, USA
                    </p><p>
                        Phone : +1. 646. 696 6005
                    </p><p>
                        Email : info@pickcargo.in
                    </p>*@
                <p>
                    @Model.ToLocation
                </p>
            </div>
        </div>
        <hr style="margin:5px 0px; background-color:rgb(85,85,85);" />
        <h2 class="title"> <span class="title-head" style="font-size:20px;"> Trip Charges</span> </h2>
        <br />
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <table style="width:100%; border-color:#555555;" class="table table-bordered">
                    <tr>
                        <th style="text-align:right; border-color:#555555; width:80%;">Trip Charges :</th>
                        <td style="text-align:right;border-color:#555555;">@*<img src="~/images/rupee.png" style="display:inline-block;" />*@ Rs. @Model.DriverTripAmount/-</td>
                    </tr>
                    <tr>
                        <th style="text-align:right;border-color:#555555;width:80%;">GST Charges :</th>
                        <td style="text-align:right;border-color:#555555;">@*<img src="~/images/rupee.png" style="display:inline-block;" />*@ Rs. @Model.DriverGST/-</td>
                    </tr>
                    @*<tr>
                            <th style="text-align:right;border-color:#555555;width:80%;">Loading and Unloading Charges :</th>
                            <td style="text-align:right;border-color:#555555;"><img src="~/images/rupee.png" style="display:inline-block;" /> Rs. 200/-</td>
                        </tr>
                        <tr>
                            <th style="text-align:right;border-color:#555555;width:80%;">Waiting Charges :</th>
                            <td style="text-align:right;border-color:#555555;"><img src="~/images/rupee.png" style="display:inline-block;" /> Rs. 200/-</td>
                        </tr>*@
                    <tr>
                        <th style="text-align:right;width:80%;border-color:#555555; font-size:20px;"><b>Grand Total :</b></th>
                        <td style="text-align:right;border-color:#555555; font-size:20px;"><b>@*<img src="~/images/rupee.png" style="display:inline-block;" />*@ Rs. @Model.DriverTripAmount/-</b></td>
                    </tr>
                </table>
            </div>
        </div>
        <hr style="margin:5px 0px; background-color:rgb(85,85,85);" />
        <div class="row">
            <div class="col-md-12" style="font-size:10px; margin-left:15px;">
                <b style="font-size:10px;">*Note:</b>
            </div>
        </div>

    </div>
    <br />
</div>
<br /><br />
