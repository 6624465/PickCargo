@model Master.Contract.ContactUs
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SendMail", "Help", FormMethod.Post, new { id = "frmContactUs", name = "frmContactUs" }))
{
    <section class="help">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <h3 class="contact-form-title"><i class="fa fa-envelope"></i> Write to us</h3>
                    <form id="contact-form" action="contact-form.html" method="post" role="form">
                        <div class="error-container"></div>
                        <div class="row">
                            <input class="form-control form-control-name" name="Type" id="Type" value="ContactUs" type="text" style="display:none;">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input class="form-control form-control-name" name="Name" id="name" placeholder="" type="text" required>
                                </div>
                            </div>
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control form-control-email" name="Email" id="email"
                                           placeholder="" type="email" required>
                                </div>
                            </div>
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label>Mobile</label>
                                    <input class="form-control form-control-mobile" name="MobileNo" id="mobile"
                                           placeholder="" required>
                                </div>
                            </div>
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label>Subject</label>
                                    <input class="form-control form-control-subject" name="Subject" id="subject"
                                           placeholder="" required>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Message</label>
                                    <textarea class="form-control form-control-message" name="Message" id="message" placeholder="" rows="7" required></textarea>
                                </div>
                                <div class="text-left">

                                    <button class="btn btn-primary solid blank" type="submit" style="margin:15px 0px">Send</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                    <div class="sidebar sidebar-right" >


                        <h3 class="widget-title">Contact Us</h3>
                        <div id="map-canvas" style="height:350px;" />

                    </div>

                </div>


            </div>


            <!-- Content row -->
        </div>
        <!-- Conatiner end -->
    </section>
}
