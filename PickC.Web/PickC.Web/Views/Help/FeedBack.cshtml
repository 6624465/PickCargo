@model Master.Contract.ContactUs
@{
    ViewBag.Title = "FeedBack";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("SendMail", "Help", FormMethod.Post, new { id = "frmContactUs", name = "frmContactUs" }))
{
    <section class="help">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <h3 class="contact-form-title"><i class="fa fa-envelope"></i> Write to us</h3>
                    @*<form id="contact-form" action="contact-form.html" method="post" role="form">*@
                    <div class="error-container"></div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                @*<label>Type</label>*@
                                @Html.DropDownListFor(x => x.Type, new List<SelectListItem>
                                                        { new SelectListItem{Text="Contact Us", Value="ContactUs"},
                                                          new SelectListItem{Text="FeedBack", Value="FeedBack",Selected = true},
                                                           new SelectListItem{Text="Customer Support", Value="CustomerSupport"}}, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @*<input class="form-control form-control-name" name="Type" id="Type"  value="ContactUs" type="text" style="display:none;">*@
                        <div class="col-md-10">
                            <div class="form-group">
                                <label>Name</label>
                                @*<input class="form-control form-control-name" name="Name" id="name" placeholder="" type="text" >*@
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                <label>Email</label>
                                @*<input class="form-control form-control-email" name="Email" id="email"
                                    placeholder="" type="email" >*@
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <label>Mobile</label>
                                @*<input class="form-control form-control-mobile" name="MobileNo" id="mobile"
                                    placeholder="" >*@
                                @Html.TextBoxFor(x => x.MobileNo, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                <label>Subject</label>
                                @*<input class="form-control form-control-subject" name="Subject" id="subject"
                                    placeholder="" >*@
                                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Message</label>
                                @*<textarea class="form-control form-control-message" name="Message" id="message" placeholder="" rows="7" ></textarea>*@
                                @Html.TextAreaFor(x => x.Message, new { @class = "form-control", rows = "7" })
                            </div>
                            <div class="text-left">

                                <button class="btn btn-primary solid blank" type="submit" style="margin:15px 0px">Send</button>
                            </div>
                        </div>
                    </div>
                    @*</form>*@
                </div>
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 cn">
                    <div id="imageHolder" class="sidebar sidebar-right">
                        <h3 class="widget-title">Contact Us</h3>
                        @*<iframe src="https://www.google.com/maps/d/embed?mid=1PsgcAaPIz3hVz9Q1qW6vzH5oy_8" style="width:100%; border:0px;" height="480" width="640"></iframe>*@
                        <div id="map-canvas" style="height:350px;"> </div>
                    </div>

                </div>
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12  cs">
                    <div class="sidebar sidebar-right">
                        <div class="widget">

                            <div class="row" style="background: rgb(255, 255, 255) none repeat scroll 0% 0%; padding-bottom: 30px;
    padding-top: 10px;">
                                <div class="col-md-12">
                                    <div>
                                        <div class="col-md-8 col-md-offset-2">
                                            <div class="support">
                                                <img src="~/images/support.jpg" style="width:310px; margin-bottom:10px;" />
                                                <a href="tel:+914065454222" class="btn btn-primary solid blank">
                                                    <i class="fa fa-phone"></i>&nbsp; +91. 40. 6 5454 222
                                                </a>
                                                @*<div class="btn btn-primary solid blank" type="submit">
                                                        <i class="fa fa-globe" aria-hidden="true"></i>
                                                        &nbsp; www.pickcargo.in
                                                    </div>*@
                                                <p>

                                                </p>
                                            </div>
                                        </div>
                                        @*<div class="col-md-8 col-md-offset-3">

                                                <div class="contact-info-box-content support">

                                                   <p><i class="fa fa-phone"></i>&nbsp; +91. 40. 6 5454 222 </p>
                                                    <p>
                                                        <i class="fa fa-globe" aria-hidden="true"></i>
                                                        &nbsp; www.pickcargo.in
                                                    </p>
                                                </div>
                                            </div>*@
                                    </div>

                                </div>

                            </div>

                        </div>
                        <!-- Widget end -->

                    </div>
                    <!-- Sidebar end -->
                </div>
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12  fd">
                    <div class="sidebar sidebar-right">
                        <div class="widget">

                            <div class="row" style="background: rgb(255, 255, 255) none repeat scroll 0% 0%; padding-bottom: 30px; padding-top: 10px;">
                                <div class="col-md-12">
                                    <div class="">

                                        <div class="col-md-12">
                                            <div class="support">
                                                <img src="~/images/feedback.png" style="width:310px; margin-bottom:10px;" />
                                            </div>
                                            <div class="support">
                                                <button class="btn btn-primary solid blank" style="text-transform:lowercase;" type="submit">
                                                    <i class="fa fa-envelope-o"></i>&nbsp;
                                                    info@pickcargo.in
                                                </button>

                                                <p>

                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>
                        <!-- Widget end -->

                    </div>
                    <!-- Sidebar end -->
                </div>
            </div>
            <!-- Sidebar Col end -->
            <!-- Content col end -->

        </div>


        <!-- Content row -->
        <!-- Conatiner end -->
    </section>
}
<script src="@Url.Content("~/js/jquery.js")"></script>

<script type="text/javascript">
    $(function () {

        $(".cs").height(0);
        $(".cn").height(0);
        $('.cn').css("visibility", 'hidden');
        $('.cs').css("visibility", 'hidden');



        $('#Type').on('change', function () {
            var i = $('#Type').val();
            if (i == "ContactUs") {

                $('.cn').css("visibility", 'visible');
                //$(".cn").height(200);
                $('.cs').css("visibility", 'hidden');
                $('.fd').css("visibility", 'hidden');

            }
            if (i == "CustomerSupport") {

                $('.cn').css("visibility", 'hidden');
                $('.cs').css("visibility", 'visible');
                $('.fd').css("visibility", 'hidden');
                
            }
            if (i == "FeedBack") {

                $('.cs').css("height", '0px');
                $(".cs").height(0);
                $(".cn").height(0);

                $('.cn').css("visibility", 'hidden');
                $('.cs').css("visibility", 'hidden');
                $('.fd').css("visibility", 'visible');
               
            }
        });
    });
</script>

