
@{
    ViewBag.Title = "FeedBack";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("SendMail", "Help", FormMethod.Post, new { id = "frmContactUs", name = "frmContactUs" }))
{
    <section class="help">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
                    <h3 class="contact-form-title"><i class="fa fa-envelope"></i> Write to us</h3>
                    <form id="contact-form" action="contact-form.html" method="post" role="form">
                        <div class="error-container"></div>
                        <div class="row">
                            <input class="form-control form-control-name" name="Type" id="Type" value="FeedBack" type="text" hidden>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input class="form-control form-control-name" name="Name" id="name" placeholder="" type="text" required>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control form-control-email" name="Email" id="email"
                                           placeholder="" type="email" required>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label>Mobile</label>
                                    <input class="form-control form-control-subject" name="MobileNo" id="subject"
                                           placeholder="" required>
                                </div>
                            </div>
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label>Message</label>
                                    <textarea class="form-control form-control-message" name="Message" id="message" placeholder="" rows="7" required></textarea>
                                </div>
                                <div class="text-left">

                                    <button class="btn btn-primary solid blank" type="submit" style="margin:15px 0px">Send </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
                    <div class="sidebar sidebar-right">
                        <div class="widget">

                            <div class="row" style="background: rgb(255, 255, 255) none repeat scroll 0% 0%; padding-bottom: 30px; padding-top: 10px;">
                                <div class="col-md-12">
                                    <div class="">

                                        <div class="col-md-12">
                                            <div class="support">
                                                <img src="~/images/feedback.png" style="width:310px; margin-bottom:10px;" />
                                            </div>
                                            <div class="support">
                                                <button class="btn btn-primary solid blank" style="text-transform:lowercase;" type="submit">
                                                    <i class="fa fa-envelope-o"></i>&nbsp;
                                                    info@pickcargo.in
                                                </button>

                                                <p>

                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>
                        <!-- Widget end -->

                    </div>
                    <!-- Sidebar end -->
                </div>

                @*<div class="sidebar sidebar-right">
                        <div class="widget">
                            <h3 class="widget-title">Send Feedback Us</h3>
                            <div class="row">
                                <div class="col-md-12">
                                <b>Email :</b> info@pickcargo.in
                                </div>

                            </div>

                        </div>
                         Widget end

                    </div>*@
                <!-- Sidebar end -->
            </div>
            <!-- Sidebar Col end -->
            <!-- Content col end -->

        </div>


        <!-- Content row -->
        <!-- Conatiner end -->
    </section>
}

