@model PickC.Services.DTO.SummaryDTO
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Breakup</title>
    <link href="@Url.Content("~/Css/font-awesome-4.7.0/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Css/AdminLTE.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <style type="text/css">
        .marginTop {
            margin-top: 10px;
        }
    </style>
</head>
<body class="container breakup">
    <div class="row top-details">
        <div class="col-md-6 col-xs-6 text-center">
            <h4 class="box-title">Today's Summary</h4>
            <h3><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;@Model.TodaySummary</h3><br />
        </div>
        <div class="col-md-6 col-xs-6 text-center">
            <h4 class="box-title">Bookings</h4>
            <h3>@Model.TodayBookings</h3><br />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#breakUpTab">BREAKUP</a></li>
                <li><a data-toggle="tab" href="#rideTab">RIDES</a></li>
            </ul>
            <div class="tab-content">
                <div id="breakUpTab" class="tab-pane fade in active">
                    <table class="table table-hover">
                        <tr>
                            <td><h5>Operator Bill</h5></td>
                            <td><h5><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;0.00</h5></td>
                        </tr>
                        <tr>
                            <td><h5>PickC Commission </h5></td>
                            <td><h5><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;@Model.pickcCommission</h5></td>
                        </tr>
                        <tr>
                            <td><h5>TDS</h5></td>
                            <td><h5><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;0.00</h5></td>
                        </tr>
                        @*<tr>
                            <td><h5>Tolls/Parkings</h5></td>
                            <td><h5><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;0.00</h5></td>
                        </tr>*@
                    </table>
                </div>
                <div id="rideTab" class="tab-pane fade">
                    <div class="row marginTop">
                        <div class="col-md-12 col-xs-12">
                            <div class="box box-default box-solid">
                                <div class="box-header with-border">
                                    <h3 class="box-title">CANCELLED RIDE</h3>
                                </div>
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-xs-12" style="text-align:center; margin-bottom:10px;">
                                            <h5 class="label label-danger">Share Ride - 2 Bookings (DDD)&nbsp; <i class="fa fa-truck" aria-hidden="true"></i>&nbsp; Share</h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Distance Travelled(km)</th>
                                                        <th>Ride Time(min)</th>
                                                        <th>Operator Bill</th>
                                                        <th>Ride Earnings</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>2 km</td>
                                                        <td>25 min</td>
                                                        <td><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;250</td>
                                                        <td><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;100</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="row reverify">
                                        <div class="col-xs-12">


                                            @Html.ActionLink("REVERIFY", "Reverify", "Payment", null, null)


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
