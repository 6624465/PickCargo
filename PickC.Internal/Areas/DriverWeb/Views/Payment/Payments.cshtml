@model IEnumerable<PickC.Services.DTO.DriverPaymentsDTO>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Payments</title>
    <link href="@Url.Content("~/Css/font-awesome-4.7.0/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Css/AdminLTE.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <style type="text/css">
        .marginTop {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="top-details row"><div class="col-md-12 col-xs-12"><h4>Payments (NEFT)</h4></div></div>
        <div class="row marginTop">
            <div class="col-md-12 col-xs-12">

                <div class="list-group">

                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <a href="#" class="list-group-item"><b>@item.CreatedOn</b> <span class="pull-right"><i class="fa fa-rupee"></i>&nbsp;@item.PaidAmount</span></a>

                            @*<a href="#" class="list-group-item"><b>Mon, 12 Sep(2 days)</b> <span class="pull-right"><i class="fa fa-rupee"></i>&nbsp;868</span></a>
                                <a href="#" class="list-group-item"><b>Sat, 10 Sep(2 days)</b> <span class="pull-right"><i class="fa fa-rupee"></i>&nbsp;1271</span></a>
                                <a href="#" class="list-group-item"><b>Thu, 08 Sep(21 days)</b> <span class="pull-right"><i class="fa fa-rupee"></i>&nbsp;97</span></a>
                                <a href="#" class="list-group-item"><b>Thu, 18 Aug(6 days)</b> <span class="pull-right"><i class="fa fa-rupee"></i>&nbsp;1170</span></a>*@

                        }
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
